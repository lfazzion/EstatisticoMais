rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.userType in ['Aluno', 'Professor']
                    && request.resource.data.approvalStatus == (request.resource.data.userType == 'Professor' ? 'pendente' : 'aprovado');
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.email == resource.data.email
                    && request.resource.data.userType == resource.data.userType
                    && request.resource.data.approvalStatus == resource.data.approvalStatus;
      allow delete: if false;
    }
    // Regras adicionais para outras coleções
  }
}
